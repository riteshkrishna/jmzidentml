<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzidml.model.mzidml.Peptide" table="Peptide" catalog="mzidentml" extends="uk.ac.ebi.jmzidml.model.mzidml.ConceptualMolecule">
        <property name="peptideSequence" type="java.lang.String"/>
        <list name="modification" cascade="all" access="field">
            <key column="Peptide_hid"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.Modification"/>
        </list>
        <list name="substitutionModification" cascade="all" access="field">
            <key column="Peptide_hid"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.SubstitutionModification"/>
        </list>
        <list name="paramGroup" cascade="all" access="field">
            <key column="Peptide_hid"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.Param"/>
        </list>
    </union-subclass>
</hibernate-mapping>