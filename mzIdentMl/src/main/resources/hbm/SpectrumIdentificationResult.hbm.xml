<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzidml.model.mzidml.SpectrumIdentificationResult"
                    table="SpectrumIdentificationResult"
                    extends="uk.ac.ebi.jmzidml.model.mzidml.Identifiable">

        <property name="spectrumID" type="java.lang.String">
            <column name="spectrumId"/>
        </property>
        <!--<property name="spectraDataRef" type="java.lang.String">-->
        <!--<column name="spectradata_hid" />-->
        <!--</property>-->
        <list name="paramGroup" inverse="true" cascade="all" access="field">
            <key column="SpectrumIdentificationResult_hid" not-null="true"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.CvParam"/>
        </list>

        <list name="spectrumIdentificationItem" cascade="all" access="field">
            <key column="SpectrumIdentificationResult_hid" not-null="true"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.SpectrumIdentificationItem"/>
        </list>
    </union-subclass>
</hibernate-mapping>
