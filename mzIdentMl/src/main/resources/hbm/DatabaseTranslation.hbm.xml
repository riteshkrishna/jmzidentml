<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.DatabaseTranslation" table="DatabaseTranslation" >
        <id name="hid" access="field" type="java.lang.Long">
            <column name="hid" />
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator" />
        </id>
        <list name="translationTable" cascade="all" access="field">
            <key column="hid"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.SpectrumIdentification"/>
        </list>
        <list name="frames" cascade="all" table="FRAMES" access="field">
            <key column="hid"/>
            <index column="idx"/>
            <element type="long"/>
        </list>

    </class>
</hibernate-mapping>
