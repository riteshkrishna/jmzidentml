<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzidml.model.mzidml.ProteinDetectionHypothesis" table="ProteinDetectionHypothesis"
           extends="uk.ac.ebi.jmzidml.model.mzidml.Identifiable">

        <property name="passThreshold" type="java.lang.Boolean">
            <column name="passThreshold" not-null="true"/>
        </property>

        <list name="cvParam" cascade="all">
            <key column="ProteinDetectionHypothesis_hid" not-null="true"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.CvParam"/>
        </list>

        <list name="userParam" cascade="all">
            <key column="ProteinDetectionHypothesis_hid" not-null="true"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.UserParam"/>
        </list>

        <many-to-one name="dBSequence" column="DBSequence_hid" class="uk.ac.ebi.jmzidml.model.mzidml.DBSequence" cascade="all"/>

    </union-subclass>
</hibernate-mapping>
