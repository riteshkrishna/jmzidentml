<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzidml.model.mzidml.Person" table="Person" catalog="mzidentml" extends="uk.ac.ebi.jmzidml.model.mzidml.Contact">
        <list name="affiliations" cascade="all">
            <key column="affiliations_hid"/>
            <index column="affiliations_idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.Affiliations"/>
        </list>
        <property name="lastName" type="java.lang.String"/>
        <property name="firstName" type="java.lang.String"/>
        <property name="midInitials" type="java.lang.String"/>
    </union-subclass>
</hibernate-mapping>