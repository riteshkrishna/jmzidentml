<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory name="oracle10g_manager">
      <!-- Database connection settings -->
            <property name="javax.persistence.jdbc.driver">oracle.jdbc.driver.OracleDriver</property>
            <property name="javax.persistence.jdbc.user">hibernate</property>
            <property name="javax.persistence.jdbc.password">testing</property>
            <property name="javax.persistence.jdbc.url">jdbc:oracle:thin:@localhost:1521:xe"</property>

            <!-- Hibernate specific configuration  -->
            <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
            <property name="hibernate.max_fetch_depth">3</property>

            <!-- Auto detect annotation model classes -->
            <property name="hibernate.archive.autodetection">class</property>

            <!-- Disable the second-level cache  -->
            <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

            <!-- Echo all executed SQL to stdout -->
            <property name="hibernate.show_sql">true</property>

            <!-- Drop and re-create the database schema on startup -->
            <property name="hibernate.hbm2ddl.auto">create</property>

            <property name="hibernate.ejb.naming_strategy">uk.ac.ebi.jmzidml.persistence.hibernate.TestNamingStrategy</property>
      <!-- Mapping files -->



    <mapping resource="hbm/ModParam.hbm.xml"/>
    <mapping resource="hbm/MzIdentML.hbm.xml"/>
    <mapping resource="hbm/Organization.hbm.xml"/>
    <mapping resource="hbm/Param.hbm.xml"/>
    <mapping resource="hbm/ParamAlternative.hbm.xml"/>
    <mapping resource="hbm/ParamAlternativeList.hbm.xml"/>
    <mapping resource="hbm/Parent.hbm.xml"/>
    <mapping resource="hbm/Peptide.hbm.xml"/>
    <mapping resource="hbm/PeptideEvidence.hbm.xml"/>
    <mapping resource="hbm/PeptideHypothesis.hbm.xml"/>
    <mapping resource="hbm/Person.hbm.xml"/>
    <mapping resource="hbm/PropertyValue.hbm.xml"/>
    <mapping resource="hbm/ProteinAmbiguityGroup.hbm.xml"/>
    <mapping resource="hbm/ProteinDetection.hbm.xml"/>
    <mapping resource="hbm/ProteinDetectionHypothesis.hbm.xml"/>
    <mapping resource="hbm/ProteinDetectionList.hbm.xml"/>
    <mapping resource="hbm/Protocol.hbm.xml"/>
    <mapping resource="hbm/ProtocolApplication.hbm.xml"/>
    <mapping resource="hbm/Provider.hbm.xml"/>
    <mapping resource="hbm/Residue.hbm.xml"/>
    <mapping resource="hbm/Sample.hbm.xml"/>
    <mapping resource="hbm/SearchDatabase.hbm.xml"/>
    <mapping resource="hbm/SearchModification.hbm.xml"/>
    <mapping resource="hbm/SequenceCollection.hbm.xml"/>
    <mapping resource="hbm/SourceFile.hbm.xml"/>
    <mapping resource="hbm/SpecificityRules.hbm.xml"/>
    <mapping resource="hbm/SpectraData.hbm.xml"/>
    <mapping resource="hbm/SpectrumIdentification.hbm.xml"/>
    <mapping resource="hbm/SpectrumIdentificationItem.hbm.xml"/>
    <mapping resource="hbm/SpectrumIdentificationList.hbm.xml"/>
    <mapping resource="hbm/SpectrumIdentificationProtocol.hbm.xml"/>
    <mapping resource="hbm/SpectrumIdentificationResult.hbm.xml"/>
    <mapping resource="hbm/SpectrumIDformat.hbm.xml"/>
    <mapping resource="hbm/SubSample.hbm.xml"/>
    <mapping resource="hbm/SubstitutionModification.hbm.xml"/>
    <mapping resource="hbm/Tolerance.hbm.xml"/>
    <mapping resource="hbm/TranslationTable.hbm.xml"/>
    <mapping resource="hbm/UserParam.hbm.xml"/>
</session-factory>
</hibernate-configuration>