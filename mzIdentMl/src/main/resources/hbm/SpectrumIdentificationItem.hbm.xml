<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzidml.model.mzidml.SpectrumIdentificationItem" table="SpectrumIdentificationItem"
                    catalog="mzidentml" extends="uk.ac.ebi.jmzidml.model.mzidml.Identifiable">


        <property name="rank" type="java.lang.Integer">
            <column name="rank" not-null="true"/>
        </property>

        <list name="peptideEvidence" cascade="all" access="field">
            <key column="SpectrumIdentificationItem_hid"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.PeptideEvidence"/>
        </list>

        <list name="paramGroup" cascade="all" access="field">
            <key column="SpectrumIdentificationItem_hid"/>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.Param"/>
        </list>

        <many-to-one name="fragmentation" column="Fragmentation_hid" class="uk.ac.ebi.jmzidml.model.mzidml.Fragmentation" cascade="all"/>

        <many-to-one name="peptide" column="Peptide_hid" class="uk.ac.ebi.jmzidml.model.mzidml.Peptide" cascade="all"/>

        <many-to-one name="massTable" column="MassTable_hid" class="uk.ac.ebi.jmzidml.model.mzidml.MassTable" cascade="all"/>

        <many-to-one name="sample" column="Sample_hid" class="uk.ac.ebi.jmzidml.model.mzidml.Sample" cascade="all"/>

        <property name="chargeState" type="java.lang.Integer"/>

        <property name="calculatedPI" type="java.lang.Float"/>

        <property name="calculatedMassToCharge" type="java.lang.Double"/>

        <property name="experimentalMassToCharge" type="java.lang.Double"/>

        <property name="passThreshold" type="java.lang.Boolean"/>

    </union-subclass>
</hibernate-mapping>
