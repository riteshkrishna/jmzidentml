<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.Tolerance" table="Tolerance" catalog="mzidentml">
        <id name="hid" type="java.lang.Long">
            <column name="hid"/>
            <generator class="identity"/>
        </id>

        <list name="cvParam" cascade="all">
            <key column="cvParam"/>
            <index column="cvParam_idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.CvParam"/>
        </list>

    </class>
</hibernate-mapping>
