<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <union-subclass name="uk.ac.ebi.jmzidml.model.mzidml.DBSequence" table="DBSequence"
                    extends="uk.ac.ebi.jmzidml.model.mzidml.ConceptualMolecule">
        <!-- set type to hibernate type 'text' to accommodate large strings. Some dbs might have problems with this,
          in which case switch to using type 'string' and explicitly set length to some value -->
        <property name="seq" type="text"/>
        <property name="length" type="java.lang.Integer"/>
        <property name="accession" type="java.lang.String"/>
        <many-to-one name="analysisSearchDatabase" cascade="all"
                     class="uk.ac.ebi.jmzidml.model.mzidml.AnalysisSearchDatabase" access="field"/>

<!--
        <list name="paramGroup" cascade="all" access="field">
            <key column="paramGroup_hid"/>
            <index column="paramGroup_idx"/>-->
