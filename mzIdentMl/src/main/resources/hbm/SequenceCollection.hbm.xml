<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.SequenceCollection" table="SequenceCollection" >
        <id name="hid" type="java.lang.Long" access="field">
            <column name="hid" />
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
        </id>
        <list name="peptide" inverse="true" access="field" cascade="all">
            <key>
                <column name="SequenceCollection_hid" />
            </key>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.Peptide" />
        </list>
        <list name="dBSequence" access="field" cascade="all">
            <key>
                <column name="SequenceCollection_hid"/>
            </key>
            <index column="idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.DBSequence" />
        </list>
    </class>
</hibernate-mapping>
