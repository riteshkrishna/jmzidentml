<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.FragmentationTable" table="FragmentationTable" >
        <id name="hid" type="java.lang.Long">
            <column name="hid" />
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator" />
        </id>
        <list name="measure" cascade="all" table="FragmentationTable_Measure" access="field">
                <key column="FragmentationTable_hid"/>
                <index column="idx"/>
                <many-to-many column="Measure_hid" class="uk.ac.ebi.jmzidml.model.mzidml.Measure"/>
        </list>
    </class>
</hibernate-mapping>
