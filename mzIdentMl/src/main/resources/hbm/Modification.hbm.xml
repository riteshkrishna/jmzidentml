<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.Modification" table="Modification" >
        <id name="hid" access="field" type="java.lang.Long">
            <column name="hid"/>
            <generator class="identity"/>
        </id>
        <property name="location" type="java.lang.Integer"/>
        <property name="avgMassDelta" type="java.lang.Double"/>
        <property name="monoisotopicMassDelta" type="java.lang.Double"/>
     <!--    <list name="paramGroup" cascade="all" access="field">
            <key column="paramGroup_hid"/>
            <index column="paramGroup_idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.Param"/>
        </list> -->
        <list name="residues" cascade="all" access="field">
            <key column="hid"/>
            <list-index column="modification_index"/>
            <element type="java.lang.String"/>
        </list>
    </class>
</hibernate-mapping>