<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.SearchModification"
           table="SearchModification" >
        <id name="hid" access="field" type="java.lang.Long">
            <column name="hid"/>
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
        </id>
        <property name="fixedMod" type="java.lang.Boolean">
            <column name="fixedmod" not-null="true"/>
        </property>

        <many-to-one name="modParam"
                     class="uk.ac.ebi.jmzidml.model.mzidml.ModParam" column="modParam_hid"
                     not-null="true">
        </many-to-one>

        <many-to-one name="specificityRules"
                     class="uk.ac.ebi.jmzidml.model.mzidml.SpecificityRules" column="specifyRules_hid" not-null="true">
        </many-to-one>

    </class>
</hibernate-mapping>
