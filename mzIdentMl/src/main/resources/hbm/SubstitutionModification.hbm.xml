<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.SubstitutionModification" table="SubstitutionModification" >
        <id name="hid" access="field" type="java.lang.Long">
            <column name="hid" />
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
        </id>
        <property name="avgMassDelta" type="java.lang.Double">
            <column name="avgMassDelta" precision="22" scale="0" />
        </property>
        <property name="location" type="java.lang.Integer">
            <column name="location" />
        </property>
        <property name="monoisotopicMassDelta" type="java.lang.Double">
            <column name="monoisotopiMmassDelta" precision="22" scale="0" />
        </property>
        <property name="originalResidue" type="java.lang.String">
            <column name="originalResidue" />
        </property>
        <property name="replacementResidue" type="java.lang.String">
            <column name="replacementResidue" />
        </property>
    </class>
</hibernate-mapping>
