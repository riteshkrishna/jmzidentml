<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.FragmentArray" table="FragmentArray" catalog="mzidentml">
        <id name="hid" type="java.lang.Long">
            <column name="hid" />
            <generator class="assigned" />
        </id>
        <list name="values" cascade="all" table="column_values">
            <key column="hid"/>
            <index column="idx"/>
            <element type="float"/>
        </list>
        <property name="measure" type="uk.ac.ebi.jmzidml.model.mzidml.Measure"/>
        <property name="measureRef" type="java.lang.String"/>
    </class>
</hibernate-mapping>
