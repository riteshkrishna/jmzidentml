<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="uk.ac.ebi.jmzidml.model.mzidml.IonType" table="IonType" catalog="mzidentml">
        <id name="hid" type="java.lang.Long" access="field">
            <column name="hid"/>
            <generator class="increment"/>
        </id>
        <property name="charge" type="java.lang.Integer"/>
        <many-to-one name="cvParam" class="uk.ac.ebi.jmzidml.model.mzidml.CvParam" cascade="all" not-null="true"/>
        <list name="fragmentArray" cascade="all" access="field">
            <key column="fragmentArray_hid"/>
            <index column="fragmentArray_idx"/>
            <one-to-many class="uk.ac.ebi.jmzidml.model.mzidml.FragmentArray"/>
        </list>
        <list name="index" cascade="all" access="field">
            <key column="hid"/>
            <list-index column="index_idx"/>
            <element type="java.math.BigInteger"/>
        </list>
    </class>
</hibernate-mapping>